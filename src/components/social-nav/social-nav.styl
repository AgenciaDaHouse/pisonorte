.c-social-nav
  display none

  +breakpoint(sm)
    display inline-block

  &__item
    display inline-block
    margin-left 0.25rem
    vertical-align middle

    +breakpoint(xl)
      margin-left 1rem

  &__link
    align-items center
    background #444
    border-radius 50%
    color #fff
    display flex
    height 1.65rem
    width @height

  &__icon
    font-size 1.25rem
    margin auto
