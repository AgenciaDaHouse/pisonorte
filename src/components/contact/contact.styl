.c-contact

  &__wrapper
    background $color-brand
    color #fff

  &__cell
    padding 2rem

  &__form
    border-right 1px solid #fff

  &__legend
    font-weight 700
    font-size 1.15rem
    padding 0 2rem
    margin-bottom 2rem
    text-transform uppercase

  &__row
    display flex
    padding 0 4rem 0 2rem
    margin-bottom 0.5rem

  &__label
    display inline-block
    font-size rem(13)
    padding 0.25rem 0.25rem 0 0
    text-align right
    text-transform uppercase
    vertical-align top
    width 6rem

  &__field,
  &__button
    background #fff
    border none

  &__field,
  &__controls
    width 100%

  &__field--textarea
    height 5rem
    resize vertical

  &__button
    color #000
    font-size rem(14)
    padding 0.5rem 1.5rem
    text-transform uppercase

  &__fb
    text-align right
    padding-right 3rem

  &__map
    height 20rem
    position relative
