.c-suppliers
  background $color-light-grey

  &__wrapper
    background #fff
    padding 6rem 0

  &__item,
  &__item-wrapper
    display flex

  &__item
    border-left 1px solid #777

    &:nth-child(3n+1)
      border-left none

  &__item-wrapper
    padding 2rem
    width 100%

  &__figure,
  &__image
    display block
    margin auto
