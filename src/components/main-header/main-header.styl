.c-main-header
  background #fff
  box-shadow 0 2px 6px rgba(0,0,0,0.5)
  padding 0.875rem 0
  position fixed
  width 100%
  top 1.65rem
  transition 0.2s
  z-index 1

  &--small
    padding 0 0 0.25rem
    top 0

  &__logo
    padding-top 0.35rem
    width 10rem

    +breakpoint(sm)
      padding-top 0
      width auto

    img
      width 100%
