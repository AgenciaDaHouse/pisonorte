.c-products
  background #edeef0
  padding 5rem 0

  &__item
    display flex
    text-transform uppercase
    flex 0 0 20%

  &__item-wrapper
    background #fff
    flex 1
    padding 2rem
    text-align center

  &__figure
    background conic-gradient(#136ab0, white)
    border-radius 50%
    overflow hidden
    margin 0 auto 1rem
    padding 5px
    height 130px
    width @height

  &__image
    background #fff
    height 120px
    display block
    border-radius 50%
    width 100%

  &__name
    font-size rem(20)
    margin-bottom 1rem

  &__description
    font-size rem(13)
    font-style italic
