.c-products
  background $color-light-grey

  &__wrapper
    background url(/img/products-bg.png) no-repeat top center
    padding 2rem 0

  &__items
    > .c-products__item
      +breakpoint(md)
        flex 0 0 20%

  &__section
    margin-bottom 2rem

    &:nth-child(2),
    &:nth-child(4)
      +breakpoint(md)
        display inline-block
        padding-right 0.75rem
        width 40%

      .c-products__items
        > .c-products__item
          +breakpoint(md)
            flex 0 0 50%

    &:nth-child(3)
      +breakpoint(md)
        display inline-block
        padding-right 0.875rem
        width 20%

      .c-products__items
        > .c-products__item
          +breakpoint(md)
            flex 0 0 100%

    &:nth-child(4)
      +breakpoint(md)
        margin-right -1.5rem
        vertical-align middle

  &__section-wrapper
    padding 2rem

  &__special-heading
    color $color-grey
    margin-top 2rem
    text-transform uppercase

    &:first-child
      margin-top 0

    &.is-facebook
      color $color-brand
      text-align right
      text-transform none
      max-width 16rem

  &__special-wrapper
    padding-left 1.5rem

    .is-facebook &
      padding-top 1rem

  &__icon-wrapper
    text-align center

    &:before
      background #fff
      content ''
      display block
      width 4rem
      height @width
      transform rotate(45deg)

      .is-facebook &
        background $color-brand
        border-radius 50%

  &__icon
    font-size 2.5rem
    position relative
    top -3.25rem

    .is-facebook &
      color $color-light-grey

  &__heading
    font-weight 700

  &__info
    font-size rem(14)

  &__item
    display flex
    text-transform uppercase

  &__item-wrapper
    background #fff
    flex 1
    padding 2rem
    text-align center

  &__figure
    background conic-gradient(#136ab0, white)
    border-radius 50%
    overflow hidden
    margin 0 auto 1rem
    padding 5px
    height 130px
    width @height

  &__image
    background #fff
    height 120px
    display block
    border-radius 50%
    width 100%

  &__name
    font-size rem(20)
    margin-bottom 1rem

  &__description
    font-size rem(13)
    font-style italic
