.c-products
  background $color-light-grey

  &__wrapper
    background url(/img/products-bg.png) no-repeat top center
    padding 2rem 0

  &__items
    > .c-products__item
      +breakpoint(sm)
        flex 0 0 20%

  &__section
    margin-bottom 2rem

    &:nth-child(2)
      display inline-block
      padding-right 0.75rem
      width 40%

      .c-products__items
        > .c-products__item
          +breakpoint(sm)
            flex 0 0 50%

    &:nth-child(3)
      display inline-block
      padding-right 0.875rem
      width 20%

      .c-products__items
        > .c-products__item
          +breakpoint(sm)
            flex 0 0 100%

  &__item
    display flex
    text-transform uppercase

  &__item-wrapper
    background #fff
    flex 1
    padding 2rem
    text-align center

  &__figure
    background conic-gradient(#136ab0, white)
    border-radius 50%
    overflow hidden
    margin 0 auto 1rem
    padding 5px
    height 130px
    width @height

  &__image
    background #fff
    height 120px
    display block
    border-radius 50%
    width 100%

  &__name
    font-size rem(20)
    margin-bottom 1rem

  &__description
    font-size rem(13)
    font-style italic
