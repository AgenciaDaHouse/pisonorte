mixin products-items
  ul.c-products__items.u-grid
    each item in products
      li.u-grid__cell.c-products__item
        .c-products__item-wrapper
          figure.c-products__figure
            img.c-products__image(src=item.image.url, alt=item.name)

          h3.c-products__name #{item.name}
          p.c-products__description #{item.description}
