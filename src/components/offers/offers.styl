.c-offers

  &__wrapper
    background $color-accent
    padding 2rem 0

  &__item
    border-left 1px solid $color-brand
    border-top 1px solid $color-brand
    text-align center

    &:nth-child(3n+1)
      border-left none

    &:nth-child(-n+3)
      border-top none

  &__item-wrapper
    padding 2rem

  &__image
    display block
    width 100%

  &__name
    font-weight 300
    padding 0.75rem 0
    position relative
    margin-bottom 0.75rem

    &:after
      border-bottom 1px solid $color-brand
      bottom 0
      content ''
      height 1px
      position absolute
      left 20%
      width 60%

  &__price
    display inline-block
    font-weight 700
    text-transform uppercase
    vertical-align middle

    &--list
      text-decoration line-through

    &--main
      font-size 1.25rem

    em
      font-size 1.25em
      font-style normal

  &__obs
    display inline-block
    font-size rem(10)
    vertical-align bottom
    text-transform uppercase
