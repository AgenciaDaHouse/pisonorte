.c-main-wrapper
  &:before,
  &:after
    content ''
    position fixed
    height 0.4rem
    top 0
    z-index 2

  &:before
    background $color-brand
    width 100%

  &:after
    background $color-accent
    width 20%
    right 0

  &__content
    background #fff
    position relative

    &:before
      background linear-gradient(to bottom, rgba(0,0,0,.35), rgba(0,0,0,0))
      content ''
      position absolute
      width 100%
      height 0.75rem
